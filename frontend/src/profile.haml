!!!
%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}/
    %meta{content: 'IE=edge', 'http-equiv': 'X-UA-Compatible'}/
    %meta{content: 'width=device-width, initial-scale=1', name: 'viewport'}/
    %title Overmapper - User profile
    %link{rel: 'stylesheet', href: 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css'}/
    %link{rel: 'stylesheet', href: 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css'}/
    %script{src: 'https://code.jquery.com/jquery-2.1.3.min.js'}
    %script{src: 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js'}
    %script{src: 'https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/3.0.3/handlebars.runtime.min.js'}
    %style
      != css :common
    %script
      != js :profile_template
      != js :profile
  %body{onload: 'start()'}
    .navbar.navbar-inverse.navbar-fixed-top{role: 'navigation'}
      .container
        .navbar-header
          %button.navbar-toggle{'data-target': '.navbar-collapse', 'data-toggle': 'collapse', type: 'button'}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: '/'} Overmapper
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              %a{href: '/'} Info
            %li
              %a{href: '/browse'} Browse
            %li
              %a{href: '/top'} Top
            %li.active
              %a{href: '/profile'} Profile
          %ul.nav.navbar-nav.navbar-right
            %li
              %a{href: '/status'} Status
            %li
              %a{href: 'https://github.com/drbig/omapp', :target => '_blank'} About
    #content.container
      Loading...
    .container
      = partial :footer
