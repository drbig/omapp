{{#with data}}
<h3>Map details</h3>
<hr>
{{#if State}}
<center>
<a href="/maps/{{ImageName}}">
<img src="/maps/{{ImageName}}" style="width:auto; height:auto; max-width:600px; max-height:600px;" alt="{{WorldName}} by {{Login}}">
</a>
<br><br>
<table class="table table-condensed" style="width:auto;">
<tr>
<th>Color</th>
<th>Meaning</th>
</tr>
<tr>
<td>White</td>
<td>Visited location - as per how the game records it.</td>
</tr>
<tr>
<td>Red</td>
<td>Overmap grid - each square is a full overmap.</td>
</tr>
<tr>
<td>Green</td>
<td>Origin overmap - where your character spawned.</td>
</tr>
<tr>
<td>Blue</td>
<td>A note has been taken there.</td>
</tr>
</table>
</center>
{{/if}}
<table class="table table-striped">
<tr>
<th>World name</th>
<td>{{WorldName}}</td>
</tr>
<tr>
<th>By user</th>
<td><a href="/profile.html?user={{Login}}">{{Login}}</a></td>
</tr>
<tr>
<th>Area</th>
<td>{{Area}} ({{Width}}x{{Height}})</td>
</tr>
<tr>
<th>Visited</th>
<td>{{Visited}}</td>
</tr>
<tr>
<th>Uploaded at</th>
<td>{{#date}}{{CreatedAt}}{{/date}}</td>
</tr>
<tr>
<th>World ID</th>
<td>{{ID}}</td>
</tr>
<tr>
<th>State</th>
<td>{{#state}}{{State}}{{/state}}
</tr>
</table>
{{/with}}
